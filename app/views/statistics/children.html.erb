
<% if @data.empty? %>

  <%= render 'anything_people' %>

<% else %>

  <%= render 'navbar' %>



  <div class="container">
    <div class="row">
      <div class="col s12 z-depth-2 ">
        <div class="card-form center-align">
          <%= fa_icon "users 4x" %>
          <h5>
            Número de personas con una cantidad determinada de hijos
          </h5>
        </div>
      </div>
    </div>
    <div class="row">

      <div class="col s12">
        <%= pie_chart @data, download: true %>


        <h3 class="center-align z-depth-2">
          <div class="card-form">
            Datos
          </div>
        </h3>

        <table class="striped responsive-table centered">
          <thead>
            <tr>
              <th>Cantidad de hijos </th>
              <th>Número de personas</th>
            </tr>
          </thead>
          <tbody>
            <% @data.each do |key, value| %>
              <tr>
                <td><%= key  %></td>
                <td><%= value %></td>
              </tr>
            <% end %>
          </tbody>
        </table>

      </div>
    </div>
  </div>

<% end %>
