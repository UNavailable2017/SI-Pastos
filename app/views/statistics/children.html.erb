<% if user_signed_in? %>
  <% if current_user.try(:admin?) %>
    <% if @num_child.empty?%>

        <div class="container">
          <div class="row">
            <div class="col m3"></div>
            <div class="col m7">
              <h5 class="center-align">
                No existen personas censadas aun
            </h5>
            </div>

          </div>
          <%= link_to 'Atras', statistics_get_data_path %>


    <% else %>
    <div class="containner">
        <div class="row">
            <div class="col m2"></div>
            <div class="col m3">
                <ul class="nav">
                    <%= link_to "Total censo", statistics_total_path, class: "waves-effect waves-light btn sub" %>
                    <%= link_to "Número de hijos", statistics_children_path, class: "waves-effect waves-light  btn sub" %>
                    <%= link_to "servicio de salud", statistics_health_path, class: "waves-effect waves-light btn sub  " %>

                    <%= link_to "Promedio de edad", statistics_average_path, class: "waves-effect waves-light btn sub  " %>
                </ul>
            </div>
            <div class="col m5">
              <ul class="center-align collection with-header">
                  <li class="collection-header"> <i class="material-icons">date_range</i>
                      <h5>Clasificacion por número de hijos (número de personas con una
                      cantidad determinada de hijos)</h5></li>

              </ul>

              <div class="col m12">

                <table class="striped responsive-table centered">
                  <thead>
                    <tr>
                      <th>Cantidad de hijos </th>
                      <th>Número de personas</th>
                    </tr>
                  </thead>

                  <tbody>
                    <% @num_child.each do |key, value| %>
                      <tr>
                         <td><%= "#{key}"  %></td>
                        <td><%= "#{value}" %></td>

                      </tr>
                    <% end %>
                  </tbody>
                </table>

              </div>
            </div>
        </div>
    </div>
    </div>



    <% end %>
    <% end %>
<% end %>
