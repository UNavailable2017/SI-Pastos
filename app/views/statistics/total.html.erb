<% if @data == 0 %>

  <%= render 'anything_people' %>

<% else %>

  <%= render 'navbar' %>

  <div class="container">
    <div class="row">
      <h3 class="center-align">Estadisticas principales</h3>
      <table class="striped responsive-table">
        <thead>
          <tr>
            <th>Pregunta</th>
            <th>Respuesta</th>
          </tr>
        </thead>
        <tbody>

          <% @data.each do |key, value| %>
            <tr>
              <td><%= key  %></td>
              <td><%= value %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>

<% end %>
