      <h2><%= residence.errors.count %><%= residence.errors.count == 1 ? ' error' : ' errores' %></h2>

      <ul>
      <% residence.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="input-field">
    <i class="material-icons prefix">home</i>
    <%= form.label :address, 'DirecciÃ³n', class: 'active' %>
    <%= form.text_field  :address, id: :residence_address, class: "materialize-textarea" %>
  </div>

  <div class="input-field">
    <i class="material-icons prefix">phone</i>
    <%= form.label :phone, 'Telefono', class: 'active' %>
