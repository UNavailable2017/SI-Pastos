<p id="notice"><%= notice %></p>

<h1>Residences</h1>

<table>
  <thead>
    <tr>
      <th>Address</th>
      <th>Phone</th>
      <th>Neighborhood</th>
      <th>Locality</th>
      <th>Lat</th>
      <th>Long</th>
      <th>Person</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @residences.each do |residence| %>
      <tr>
        <td><%= residence.address %></td>
        <td><%= residence.phone %></td>
        <td><%= residence.neighborhood %></td>
        <td><%= residence.locality %></td>
        <td><%= residence.lat %></td>
        <td><%= residence.long %></td>
        <td><%= residence.person_id %></td>
        <td><%= link_to 'Show', residence %></td>
        <td><%= link_to 'Edit', edit_residence_path(residence) %></td>
        <td><%= link_to 'Destroy', residence, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

