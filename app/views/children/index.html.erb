<div class="container">
  <div class="row">
    <div class="center-align">
      <h3>Niños</h3>
      <%= link_to 'Agregar hijo', new_child_path, class: 'waves-effect waves-light btn' %>
      <%= link_to 'Siguiente', root_path, class: 'waves-effect waves-light btn' %>
    </div>
    <table class="bordered highlight centered responsive-table">
      <thead>
        <tr>
          <th>Nombres y Apellidos</th>
          <th>Años</th>
          <th>Estudios</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @children.each do |child| %>
          <tr>
            <td><%= child.name %></td>
            <td><%= (Time.now.year - child.birthdate.year).to_i %></td>
            <td><%= child.completed_studies %></td>
            <td><%= link_to (fa_icon 'eye'), child %></td>
            <td><%= link_to (fa_icon 'pencil'), edit_child_path(child) %></td>
            <td><%= link_to (fa_icon 'times'), child, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="row">

  </div>

</div>




<div class="center-align">
  <%= will_paginate @children %>
</div>
