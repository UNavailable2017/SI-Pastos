<p id="notice"><%= notice %></p>

<h1>Children</h1>

<table>
  <thead>
    <tr>      
      <th>Name</th>
      <th>Age</th>
      <th>Censo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @children.each do |child| %>
      <tr>
        <td><%= child.name %></td>
        <td><%= child.age %></td>
        <td><%= child.censo_id %></td>
        <td><%= link_to 'Show', child %></td>
        <td><%= link_to 'Edit', edit_child_path(child) %></td>
        <td><%= link_to 'Destroy', child, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="center-align">
  <%= will_paginate @children,  renderer: MaterializePagination::Rails %>
</div>


<%= link_to 'New Child', new_child_path %>
