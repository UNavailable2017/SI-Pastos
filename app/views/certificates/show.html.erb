<% if @dat.first == nil%>

    <div class="container">
      <div class="row">
        <div class="col m3"></div>
        <div class="col m7">
          <h5 class="center-align">
            Esta persona  NO se encuentra en el censo
        </h5>
        </div>

      </div>
      <%= link_to 'Atras', new_certificate_path %>

<% else %>
  <div class="container">
      <div class="row">
          <div class="col m3"></div>
          <div class="col m7">
            <h4 class="center-align">
                  <h5> La persona identificada con <%= @dat.first.documentPerson%> se encuentra censada</h5>
            </h4>
          </div>

          <div class="row">
              <div class="col m3"></div>
              <div class="col m7">
                <h4 class="center-align">
                     <%= link_to  'Descarga PDF',  certificate_path(format: :pdf), class: "btn waves-effect waves-light"%>
                </h4>
              </div>


    </div>
  </div>



<% end %>
