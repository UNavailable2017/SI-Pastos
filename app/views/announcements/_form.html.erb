<%= form_with(model: announcement, local: true) do |form| %>
  <% if announcement.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(announcement.errors.count, "error") %> prohibited this announcement from being saved:</h2>

      <ul>
      <% announcement.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="input-field">
    <i class="material-icons prefix">access_time</i>
    <%= form.label :publicationDate, "Fecha de publicacion" %>
    <%= form.text_field :publicationDate, id: :announcement_publicationDate, class: "datepicker" %>
  </div>

  <div class="input-field">
    <i class="material-icons prefix">access_alarm</i>
    <%= form.label :deadline, "Fecha de terminacion" %>
    <%= form.text_field :deadline, id: :announcement_deadline, class: "datepicker" %>
  </div>

  <div class="input-field">
    <i class="material-icons prefix">info</i>
    <%= form.label :announcementType, "Tipo de Anuncio" %>
    <%= form.text_area :announcementType, id: :announcement_announcementType, class: "materialize-textarea" %>
  </div>

  <div class="input-field">
    <i class="material-icons prefix">event</i>
    <%= form.label :announcementInformation, "Tipo de informacion" %>
    <%= form.text_area :announcementInformation, id: :announcement_announcementInformation, class: "materialize-textarea" %>
  </div>

  <div class='input-field' style="display:none">
    <%= form.label :person_id %>
    <%= form.number_field :person_id, id: :event_person_id, value: 1, 'aria-hidden' => true %>
  </div>

  <div class="actions">
    <div class="center-align">
      <%= link_to 'Atras', announcements_path, class:"btn waves-effect waves-light" %>
      <%= form.submit 'Publicar Empleo' ,class:"btn waves-effect waves-light"  %>
    </div>
  </div>
<% end %>
