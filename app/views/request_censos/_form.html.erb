<%= form_with(model: request_censo, local: true) do |form| %>
  <% if request_censo.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(request_censo.errors.count, "error") %> prohibited this request_censo from being saved:</h2>

      <ul>
      <% request_censo.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>



  <div class="input-field">
     <i class="material-icons prefix">account_circle</i>
    <%= form.label :name, "Nombre" %>
    <%= form.text_field :name, id: :request_censo_name %>
  </div>

  <div class="input-field">
     <i class=" prefix"></i>
    <%= form.label :lastname, "Apellido" %>
    <%= form.text_field :lastname, id: :request_censo_lastname %>
  </div>


  <div class="input-field">
     <i class=" prefix"></i>
    <%= form.label :num_document, "Número de documento"%>
    <%= form.number_field :num_document, id: :request_censo_num_document %>
  </div>

  <div class="input-field">
     <i class="material-icons prefix">phone</i>
    <%= form.label :phone, "Telefono" %>
    <%= form.number_field :phone, id: :request_censo_phone %>
  </div>

  <div class="input-field">
     <i class="material-icons prefix">home</i>
    <%= form.label :address, "Dirección residencia"%>
    <%= form.text_field :address, id: :request_censo_address %>
  </div>
 <% unless current_user.try(:admin?) %>
  <div class="input-field">
     <i class="material-icons prefix">email</i>
    <%=  form.email_field :user_email, id: :request_censo_address, :value => current_user.email, readonly: true %>
    <div class="actions center-align">
     <%= form.submit 'Solicitar', class: "btn waves-effect waves-light" %>
   </div>
  </div>
 <%else%>
     <div class="input-field">
        <i class="material-icons prefix">email</i>
       <%= form.label :user_email, "Correo"%>
       <%= form.text_field :user_email, id: :request_censo_user_email %>
     </div>
     <div class="actions center-align">
      <%= form.submit 'Agendar', class: "btn waves-effect waves-light" %>
    </div>
  <% end %>
<%end%>
