<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @request_censo.name %>
</p>


<p>
  <strong>Num document:</strong>
  <%= @request_censo.num_document %>
</p>

<p>
  <strong>Phone:</strong>
  <%= @request_censo.phone %>
</p>

<p>
  <strong>Address:</strong>
  <%= @request_censo.address%>
</p>

<p>
  <strong>email:</strong>
  <%= @request_censo.user_email%>
</p>

<%= link_to 'Edit', edit_request_censo_path(@request_censo) %> |
<%= link_to 'Back', request_censos_path %>

<% if user_signed_in? %>
  <% unless current_user.try(:admin?) %>
    <% if @dat.empty?%>

        <div class="container">
          <div class="row">
            <div class="col m3"></div>
            <div class="col m7">
              <h5 class="center-align">
                Esta persona  NO se encuentra en el censo
            </h5>
            </div>

          </div>
          <%= link_to 'Atras', new_certificate_path %>

    <% else %>
      <div class="container">
          <div class="row">
              <div class="col m3"></div>
              <div class="col m7">
                <h5 class="center-align">
                    La persona identificada con <%= @dat.first.documentPerson%> se encuentra censada    </h5>
              </div>

              <div class="row">
                  <div class="col m3"></div>
                  <div class="col m7">
                    <h4 class="center-align ">
                         <%= link_to  'Descarga PDF',  certificate_path(format: :pdf), target:"_blank", class: "btn waves-effect waves-light" %>

                    </h4>
                  </div>
              </div>

        </div>
      </div>
    <% end %>

    <%end%>
<%end%>
