<% if user_signed_in? %>
  <% if current_user.try(:admin?) %>
        <div class="container">
            <h4 class="center-align">Solicitudes de censo</h4>
        </div>

        <div class="col m12">

            <table class="striped">
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Type document</th>
                  <th>Num document</th>
                  <th>Phone</th>
                  <th>Address</th>
                  <th colspan="3"></th>
                </tr>
              </thead>

              <tbody>
                <% @request_censos.each do |request_censo| %>
                  <tr>
                    <td><%= request_censo.name %></td>
                    <td><%= request_censo.type_document %></td>
                    <td><%= request_censo.num_document %></td>
                    <td><%= request_censo.phone %></td>
                    <td><%= request_censo.address %></td>
                    <td><%= link_to 'Show', request_censo %></td>
                    <td><%= link_to 'Edit', edit_request_censo_path(request_censo) %></td>
                    <td><%= link_to 'Destroy', request_censo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>

        </div>

<br>

<%= link_to 'New Request Censo', new_request_censo_path %>

<% end %>
<% end %>
