
<% if user_signed_in? %>
  <% if current_user.try(:admin?) %>

    <div class="container">
      <h2 class="center-align">Solicitudes de censo</h2>
    </div>
    <div class="divider"></div>
    <div class="container">
      <div class="row">
        <div class="col s12">
          <table class="striped">
            <thead>
              <tr>
                <th><%= sortable 'name', "Nombre"%></th>
                <th><%= sortable 'lastname', "Apellido" %></th>
                <th><%= sortable 'num_document', "NÃºmero de documento" %></th>
                <th><%= sortable 'phone', "Telefono" %></th>
                <th><%= sortable 'address', "Direccion" %></th>
                <th><%= sortable 'user_email', "email" %></th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
                <% @request_censos.each do |request_censo| %>
                  <tr>
                    <td><%= request_censo.name %></td>
                    <td><%= request_censo.lastname %></td>
                    <td><%= request_censo.num_document %></td>
                    <td><%= request_censo.phone %></td>
                    <td><%= request_censo.address %></td>
                    <td><%= request_censo.user_email %></td>
                    
                    <td><%= link_to (fa_icon "times"), request_censo, method: :delete, data: { confirm: 'Estas seguro?' } %></td>
                  </tr>
                <% end %>

            </tbody>
          </table>
        </div>
      </div>

        <div class="row">
          <h5 class="center-align">
            <%= link_to 'Agendar solicitud', new_request_censo_path, class: "btn waves-effect waves-light" %>
          </h5>
        </div>
    </div>


    <% end %>
    <% end %>

    <%= will_paginate @collection,
        class: 'apple_pagination',
        previous_label: '&#8592;<strong> Anterior',
        next_label: 'Siguiente &#8594;'
    %>
