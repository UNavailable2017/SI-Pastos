<div class="container">

<% if current_user.try(:admin?) %>
  <div class="row">
    <div class="col s12">
      <h2 class="header center-align">Elección Gobernador</h2>
    </div>
  </div>
  <div class="row">
    <div class="card horizontal z-depth-5">
      <div class="card-form">

          <div class="card-stacked col s5 m5 l5">
          <div class="card-content">
            <p><strong>Fecha:</strong> <%= @election.date %></p>
            <p><strong>Ganador:</strong> <%= @election.winner %></p>
            <p><strong>id candidato:</strong> <%= @election.candidate_id %></p>
          </div>
          <div class="card-action">
            <div class="center-align">
              <%= link_to 'Atras', elections_path , class:"btn waves-effect waves-light" %>

                <%= link_to 'Editar',  edit_election_path(@election) , class:"btn waves-effect waves-light" %>
                <%= link_to 'Agregar candidatos',new_candidate_path , class:"btn waves-effect waves-light" %>
                    <%unless @get_data_candidates.empty? %>
                        <%= link_to 'Ver votación',  candidates_path , class:"btn waves-effect waves-light" %>
                     <% end %>

            </div>
          </div>
         </div>

         <%if @get_data_candidates.empty? %>

             <div class="card-stacked col s2.5 m2.5 l2.5">
                 <div class="card-content">
                 </div>
             </div>

             <div class="card-stacked col s2.5 m2.5 l2.5">
                 <div class="card-content">
                 </div>
             </div>
             <div class="card-stacked col s2 m2 l2">
                 <div class="card-content">
                 </div>
             </div>
           </div>
       </div>
     </div><!-- .row -->
    </div>  <!-- .container -->

    <%else%>
          <div class="card-stacked col s3 m3 l3">
              <div class="card-content">
                  <h5 class="header center-align">Primer candidato</h5>
                  <p><strong>Nombre:</strong> <%=@get_data_candidates[0].firstname%></p>
                  <p><strong>Apellido:</strong> <%=@get_data_candidates[0].lastname%></p>
              </div>
          </div>

          <div class="card-stacked col s3 m3 l3">
              <div class="card-content">
                  <h5 class="header center-align">Segundo candidato</h5>
                  <p><strong>Nombre:</strong> <%=@get_data_candidates[1].firstname%></p>
                  <p><strong>Apellido:</strong> <%=@get_data_candidates[1].lastname%></p>
              </div>
          </div>

          <div class="card-stacked col s3 m3 l3">
              <h5 class="header center-align">Tercer candidato</h5>
              <div class="card-content">
                  <p><strong>Nombre:</strong> <%=@get_data_candidates[2].firstname%></p>
                  <p><strong>Apellido:</strong> <%=@get_data_candidates[2].lastname%></p>
              </div>
          </div>

          <div class="card-stacked col s3 m3 l3">
              <h5 class="header center-align">Cuarto candidato</h5>
              <div class="card-content">
                  <p><strong>Nombre:</strong> <%=@get_data_candidates[3].firstname%></p>
                  <p><strong>Apellido:</strong> <%=@get_data_candidates[3].lastname%></p>
              </div>
          </div>




        </div>
    </div>
  </div><!-- .row -->
</div>  <!-- .container -->
<%end%>
<%end%>
