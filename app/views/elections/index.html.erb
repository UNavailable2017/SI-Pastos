<p id="notice"><%= notice %></p>

<h1>Elections</h1>

<table>
  <thead>
    <tr>    
      <th>Date</th>
      <th>Winner</th>
      <th>Candidate</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @elections.each do |election| %>
      <tr>
        <td><%= election.date %></td>
        <td><%= election.winner %></td>
        <td><%= election.candidate_id %></td>
        <td><%= link_to 'Show', election %></td>
        <td><%= link_to 'Edit', edit_election_path(election) %></td>
        <td><%= link_to 'Destroy', election, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="center-align">
  <%= will_paginate @elections,  renderer: MaterializePagination::Rails %>
</div>


<%= link_to 'New Election', new_election_path %>
