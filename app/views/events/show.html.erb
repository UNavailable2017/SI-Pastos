<div class="container">

  <div class="row">
    <div class="col s12 m12">
      <h2 class="header center-align">Evento</h2>
      <div class="row">
        <div class="card horizontal z-depth-5">
          <div class="card-form">
            <div class="card-image col s6">
              <% if @event.image.url == nil %>
                <img
                  src='http://www.joyandvisionagency.com/wp-content/uploads/2015/07/SAMEN_ETEN1-e1436970143287.jpg'
                  class="responsive-img putMaxWith materialboxed"
                />
              <% else %>
                <%= image_tag(@event.image.url, alt: 'Imagen de Evento', class: 'responsive-img') %>
              <% end %>
            </div>

            <div class="card-stacked col s6">
              <div class="card-content">
                <p><strong>Name:</strong> <%= @event.name %></p>
                <p><strong>Fecha:</strong> <%= @event.date %></p>
                <p><strong>Evento:</strong> <%= @event.eventType %></p>
                <p><strong>Informaci√≥n:</strong></p>
                <%= @event.eventInfo %>
              </div>
              <div class="card-action">
                <div class="center-align">
                  <%= link_to 'Atras', events_path, class:"btn waves-effect waves-light" %>
                  <% if current_user.try(:admin?) %>
                    <%= link_to 'Editar', edit_event_path(@event), class:"btn waves-effect waves-light" %>
                  <% end %>
                </div>
              </div>
            </div>
          </div>

        </div>
      </div>
    </div>
  </div>

</div>
