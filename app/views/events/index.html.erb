<p id="notice"><%= notice %></p>
<div class="container">
  <h2 class="center-align">Eventos de la comunidad</h2>
</div>
<div class="divider"></div>

<div class="row">
  <div class="col s12 m4 l4">
    <h5 class="center-align">
        <%= link_to 'Nuevo Evento', new_event_path, class: "btn waves-effect waves-light" %>


    </h5>
  </div>
  <!-- <div class="col s12 m4 l1"></div> -->
  <div class="col s12 m4 l8">

    <table class="striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Date</th>
          <th>Eventtype</th>
          <th>Eventinfo</th>
          <th>Person</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @events.each do |event| %>
          <tr>
            <td><%= event.name %></td>
            <td><%= event.date %></td>
            <td><%= event.eventType %></td>
            <td><%= event.eventInfo %></td>
            <td><%= event.person_id %></td>
            <td><%= link_to 'Show', event %></td>
            <td><%= link_to 'Edit', edit_event_path(event) %></td>
            <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

  </div>
</div>
<div class="center-align">
  <%= will_paginate @events,  renderer: MaterializePagination::Rails %>
</div>
<div class="divider"></div>
<div class="col s12">
  <p class="center-align">
    SI-Pastos
  </p>
</div>

<br>
