<div class="container">
  <h2 class="center-align">Eventos de la comunidad</h2>
</div>
<div class="divider"></div>

<div class="row">
  <div class="container">
    <% if current_user.try(:admin?) %>
      <div class="col m12">
        <h5 class="center-align">
            <%= link_to 'Nuevo Evento', new_event_path, class: "btn waves-effect waves-light" %>
        </h5>
      </div>
    <% end %>

    <div class="col m12">

      <table class="striped">
        <thead>
          <tr>
            <th><%= sortable "name", "Nombre"%></th>
            <th><%= sortable "date", "Fecha"%></th>
            <th><%= sortable "eventType", "Tipo de Evento"%></th>
            <th><%= sortable "eventInfo", "Información del Evento"%></th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @events.each do |event| %>
            <tr>
              <td><%= event.name %></td>
              <td><%= event.date %></td>
              <td><%= event.eventType %></td>
              <td><%= event.eventInfo %></td>
              <td><%= link_to (fa_icon "eye"), event %></td>
              <% if current_user.try(:admin?) %>
                <td><%= link_to (fa_icon "pencil"), edit_event_path(event) %></td>
                <td><%= link_to (fa_icon "times"), event, method: :delete, data: { confirm: '¿esta seguro?' } %></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>

</div>
  <ul class="pagination">
    <li class="disabled"><a href="#!"><i class="material-icons">chevron_left</i></a></li>
    <li class="active"><a href="#!">1</a></li>
    <li class="waves-effect"><a href="#!">2</a></li>
    <li class="waves-effect"><a href="#!">3</a></li>
    <li class="waves-effect"><a href="#!">4</a></li>
    <li class="waves-effect"><a href="#!">5</a></li>
    <li class="waves-effect"><a href="#!"><i class="material-icons">chevron_right</i></a></li>
  </ul>

  <%= will_paginate @collection, class: 'center-align', renderer: MaterializePagination::Rails %>
