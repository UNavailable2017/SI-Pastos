<%= form_with(model: event, local: true) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="input-field">
    <i class="material-icons prefix">accessibility</i>
    <%= form.label :name, "Nombre", class: 'active' %>
    <%= form.text_field :name, id: :event_name %>
  </div>

  <div class="input-field">
    <i class="material-icons prefix">access_time</i>
    <%= form.label :date, "Fecha", class: 'active' %>
    <%= form.text_field :date, id: :event_date, class: "datepicker" %>
  </div>

  <div class="input-field file-field">
    <div class="btn">
      <span>Imagen</span>
      <%= form.file_field :image, id: :event_image, class: 'btn' %>
    </div>
    <div class="file-path-wrapper">
      <input class="file-path validate" type="text">
    </div>
  </div>

  <br />
  <div class="input-field">
    <i class="material-icons prefix">chevron_right</i>
    <%= form.label :eventType, "Tipo de Evento", class: 'active' %>
    <%= form.text_field :eventType, id: :event_eventType %>
  </div>


  <div class="input-field">
    <i class="material-icons prefix">chevron_right</i>
    <%= form.label :eventInfo, "Información del evento", class: 'active' %>
    <%= form.text_area :eventInfo, id: :event_eventInfo,  class: "materialize-textarea" %>
  </div>

  <div class="actions center-align">
      <%= link_to 'Atrás', events_path, class:"btn waves-effect waves-light" %>
      <%= form.submit (current_page?(new_event_path) ? 'Crear' : 'Editar') + ' Evento',
      class: "btn waves-effect waves-light" %>
  </div>

<% end %>
